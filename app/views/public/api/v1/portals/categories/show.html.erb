<%= render "public/api/v1/portals/header", portal: @portal %>
<section class="bg-white max-w-4xl mx-auto py-6 px-4 flex flex-col items-center justify-center">
    <div class="pb-8 flex items-center w-full h-32">
        <a href="/public/api/v1/portals/<%= @portal.slug %>"
            class="flex flex-row items-center text-base font-sans font-medium text-slate-700 hover:text-slate-900 hover:underline">
            <span class="mr-2">
                <svg class="w-4 h-4 fill-current text-slate-600" width="24" height="24" fill="none" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M10.733 19.79a.75.75 0 0 0 1.034-1.086L5.516 12.75H20.25a.75.75 0 0 0 0-1.5H5.516l6.251-5.955a.75.75 0 0 0-1.034-1.086l-7.42 7.067a.995.995 0 0 0-.3.58.754.754 0 0 0 .001.289.995.995 0 0 0 .3.579l7.419 7.067Z"
                        fill="#212121" /></svg>
            </span>
            Back
        </a>
    </div>
    <div class="flex justify-between items-center w-full">
        <h3 class="text-2xl text-slate-900 font-semibold subpixel-antialiased leading-relaxed hover:underline">
            <a href="/public/api/v1/portals/<%= @portal.slug %>/categories/<%= @category.slug %>"><%= @category.name %>
            </a>
        </h3> <span class="text-slate-500"><%= @category.articles.published.size %> articles</span>
    </div>
    <div class="py-4 w-full mt-2 flex-grow">
        <% if @category.articles.size == 0 %>
        <div class="h-full flex items-center justify-center bg-slate-50 rounded-xl">
            <p class="text-sm text-slate-500">No articles here</p>
        </div>
        <% else %>
        <% @category.articles.each do |article| %>
        <div class="flex justify-between content-center h-8 my-1">
            <a class="text-slate-800 hover:underline"
                href="/public/api/v1/portals/<%= @portal.slug %>/articles/<%= article.id %>"
                class=""><%= article.title %></a>
            <span>
                <svg class="w-4 h-4 fill-current text-slate-700" width="24" height="24" fill="none" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M8.47 4.22a.75.75 0 0 0 0 1.06L15.19 12l-6.72 6.72a.75.75 0 1 0 1.06 1.06l7.25-7.25a.75.75 0 0 0 0-1.06L9.53 4.22a.75.75 0 0 0-1.06 0Z" />
                </svg>
            </span>
        </div>
        <% end %>
        <% end %>
    </div>
</section>
