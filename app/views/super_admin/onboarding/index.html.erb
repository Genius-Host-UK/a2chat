<!DOCTYPE html>
<html>
  <head>
    <title>SuperAdmin | Chatwoot</title>
    <%= javascript_pack_tag 'superadmin' %>
    <%= stylesheet_pack_tag 'superadmin' %>
  </head>
  <body data-gr-c-s-loaded="true">
    <div id="app" class="superadmin-body app-wrapper app-root">
      <div class="medium column login">
        <div class="text-center medium-12 login__hero align-self-top">
          <h2 class="hero__title">
            Howdy, Welcome to Chatwoot ðŸ‘‹
          </h2>
        </div>
        <div class="row align-center">
          <div class="small-12 medium-4 column">
            <%= form_tag('/super_admin/onboarding', class: 'login-box column align-self-top') do %>
              <div class="column log-in-form">
                <% if flash[:error].present? %>
                <div data-alert class="alert-box warning"><%= flash[:error] %></div>
                <% end %>

                <label>
                  Name
                  <%= text_field :user, :name, placeholder: "John Doe", required: true %>
                </label>
                <label>
                  Company Name
                  <%= text_field :user, :company, placeholder: "Acme Inc", required: true %>
                </label>
                <label>
                  Email
                  <%= email_field :user, :email, placeholder: "john@acme.inc", required: true %>
                </label>
                <label>
                  Password
                  <%= password_field :user, :password, required: true %>
                </label>
                <p>
                  <%= check_box_tag "allow_contact", 'true', true %> Allow Chatwoot team to reachout for product feedback
                </p>
                <p>
                  <%= check_box_tag "subscribe_newsletter", 'true', true %> Subscribe to Release Notes & Newsletters
                </p>
  
                <button type="submit" class="button nice large expanded">
                  Finish Setup
                </button>
              </div>
            <% end %>
            <div class="column text-center sigin__footer">
              Â© Chatwoot
            </div>
          </div>
        </div>
    </div>
  </body>
</html>
