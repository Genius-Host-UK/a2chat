<% @messages.each do |message| %>
  <p padding: 10px 20px; margin: 5px 0 20px 0; background: #efefef; border-radius: 10px; display: inline-block; font-family: Roboto,RobotoDraft,Helvetica,Tahoma,Arial,sans-serif; text-align: start; unicode-bidi: plaintext;>
    <% if message.content %>
      <%= message.content.gsub("\n", "<br/>").html_safe %>
    <% end %>
    <% if message.attachments %>
      <% message.attachments.each do |attachment| %>
        attachment [<a href="<%= attachment.file_url %>" _target="blank">click here to view</a>]
      <% end %>
    <% end %>
  </p>
<% end %>
